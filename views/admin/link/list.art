<!DOCTYPE html>
<html lang="en">
	<head>
		{{include 'admin/public/header.art'}}
		<link rel="stylesheet" href="{{__HOST__}}/admin/js/jqPagination/css/pagination.css">
		<style>
			.sort_input{
				width:60px;
			}
			.table-responsive{
				margin-top:10px;
			}
		</style>
	</head>
	<body>
		<div class="navbar navbar-default" id="navbar">
			<script type="text/javascript">
				try{ace.settings.check('navbar' , 'fixed')}catch(e){}
			</script>
			{{include 'admin/public/nav_top.art'}}
		</div>

		<div class="main-container" id="main-container">
			<script type="text/javascript">
				try{ace.settings.check('main-container' , 'fixed')}catch(e){}
			</script>

			<div class="main-container-inner">
				<a class="menu-toggler" id="menu-toggler" href="#">
					<span class="menu-text"></span>
				</a>

				{{include 'admin/public/nav_left.art'}}

				<div class="main-content">
					<div class="breadcrumbs" id="breadcrumbs">
						<script type="text/javascript">
							try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
						</script>

						<ul class="breadcrumb">
							<li>
								<i class="icon-home home-icon"></i>
								<a href="{{__HOST__}}/admin">首页</a>
							</li>
							<li class="active">友情链接列表</li>
						</ul><!-- .breadcrumb -->
					</div>

					<div class="page-content">
						<div class="page-header">
							<h1>
								友情链接列表
							</h1>
						</div><!-- /.page-header -->
						<!--表格-->
						<div class="table-responsive">
							<table id="sample-table-1" class="table table-striped table-bordered table-hover center">
								<thead>
									<tr>
										<th class="center">标题</th>
										<th class="center" width="80px;">图片</th>
										<th class="center">链接地址</th>
										<th class="center" width="80px;">排序</th>
										<th class="center" width="80px;">状态</th>
										<th width="80px;" class="center">操作</th>
									</tr>
								</thead>

								<tbody id="tbody">
								</tbody>
							</table>
						</div>
						<div class="page">
							<div id="pagination" style="float:right;"></div>
						</div>
					</div>
				</div><!-- /.main-content -->
			
			</div><!-- /.main-container-inner -->

			<a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
				<i class="icon-double-angle-up icon-only bigger-110"></i>
			</a>
		</div><!-- /.main-container -->


		{{include 'admin/public/footer.art'}}
		<script type="text/javascript" src="{{__HOST__}}/admin/js/jqPagination/js/pagination.min.js"></script>
		<script type="text/template" id="tpl">
			<tr>
				<td><&=title&></td>
				<td><img width="50" src="{{__HOST__}}/<&=pic&>" title="<&=title&>" alt="<&=title&>"></td>
				<td><&=url&></td>
				<td><input type="number" data-id="<&-_id&>" value="<&=sort&>" class="sort_input"/></td>
				<td>
					<& if(status=='1'){&>
					<button data-id="<&-_id&>" class="btn btn-xs btn-success btn-status">
						<i class="icon-ok bigger-120"></i>
					</button>
					<& }else if(status=='0'){&>
					<button data-id="<&-_id&>" class="btn btn-xs btn-danger btn-status">
						<i class="icon-remove bigger-130"></i>
					</button>
					<&}&>
				</td>
				<td>
					<div class="btn-group center">
						<button onclick="location.href='{{__HOST__}}/admin/link/edit/<&-_id&>'" class="btn btn-xs btn-info">
							<i class="icon-edit bigger-120"></i>
						</button>
						&nbsp;
						<button data-id="<&-_id&>" class="btn btn-xs btn-danger remove">
							<i class="icon-trash bigger-120"></i>
						</button>
					</div>
				</td>
			</tr>
		</script>
		<script type="text/javascript">
			(function($){
				/**
				 * 
				 * @class List
				*/
				function List(){
					this.page=1;
					this.pagesize=5;
					this.totalSize=0;
				}
				/**
				 * 
				 * @method init 初始化
				*/
				List.prototype.init=function(){
					var self = this
					this.bindEvent(function(){
						self.getData()
					})
				}
				/**
				 * 
				 * @method getData 获取列表
				*/
				List.prototype.getData=function(cb){
					var self=this
					var url="{{__HOST__}}/admin/link/getdata";
					$("#loading").show()
					getSubmit(url,self.getfilter(),function(res){
						if(res.code===0){
							if(res.list.length>0){
								var html = self.getHtml(res.list)
								self.totalSize=res.totalSize;
								$('#tbody').html(html)
							}else{
								self.totalSize=res.totalSize;
								$('#tbody').html('<tr><td colspan="5" style="padding:100px 0;">暂无数据</td></tr>')
							}
							//重新更新表格里的dom操作
							self.updateEvent()
							//设置过滤
							self.setFilter(res);
							$("#pagination").whjPaging("setPage", {currPage: self.page, totalPage: Math.ceil(self.totalSize/self.pagesize), totalSize: self.totalSize});
							setTimeout(function(){
								$("#loading").hide()
							},300)
							cb&&cb()
						}
					})
				}
				/**
				 * 
				 * @method getfilter 获取分页参数
				*/
				List.prototype.setFilter=function(res){
					var self = this
					this.page=res.page
					this.pagesize=res.pagesize
					this.totalSize=res.totalSize
				}
				/**
				 * 
				 * @method getfilter 获取分页参数
				*/
				List.prototype.getfilter=function(){
					var self = this
					return {
						page:self.page,
						pagesize:self.pagesize
					}
				}
				List.prototype.getHtml=function(list){
					var str='';
					for(var i=0;i<list.length;i++){
						var template = _.template($('#tpl').html());
						str+=template(list[i]);
					}
					return str;
				}
				/**
				 * 
				 * @method updateEvent 表格变化是需要更新的dom
				*/
				List.prototype.updateEvent=function(){
					//排序改变
					$('.sort_input').blur(function(){
						var id = $(this).attr('data-id');
						var val = $(this).val();
						if(val===""){
							layer.msg('不能为空',{icon:2})
							$(this).focus()
						}else{
							var url = "{{__HOST__}}/admin/link/changeSort";
							postSubmit(url,{id:id,sort:parseInt(val)},function(res){
								console.log(res.msg)
							})
						}
					})
					//改变状态
					$('.btn-status').click(function(){
						var $this=$(this);
						var id=$(this).attr('data-id')
						//changeStatus 此函数封装在basic.js中
						changeStatus('link','status',id,function(res){
							if(res.code===0){
								if(res.data.status===1){
									$this.removeClass('btn-danger').addClass('btn-success')
									.children('i').removeClass('icon-remove').addClass('icon-ok')
								}else{
									$this.removeClass('btn-success').addClass('btn-danger')
									.children('i').removeClass('icon-ok').addClass('icon-remove')
								}
							}else{
								layer.msg(res.msg,{icon: 2})
							}
						})
					})
					//删除
					$('.remove').click(function(){
						var id=$(this).attr('data-id');
						var $this=$(this);
						layer.confirm('是否删除该轮播图？', {
							'title':'警告',
							btn: ['确定','取消'] //按钮
						}, function(){
							//此函数封装在basic.js中
							publicRemove('link',id,function(res){
								if(res.code===0){
									layer.msg(res.msg,{icon:1})
									$this.parent('.btn-group').parent('td').parent('tr').remove()
								}else{
									layer.msg(res.msg,{icon:2})
								}
							})
						}, function(){
							return true;
						});
					})
				}
				/**
				 * 
				 * @method bindEvent dom操作
				*/
				List.prototype.bindEvent=function(cb){
					var self = this
					//分页初始化
					$("#pagination").whjPaging({
						totalSize: self.totalSize,
						pageSizeOpt: [
							{value: 5, text: '5条/页',selected:true},
							{value: 10, text: '10条/页'},
							{value: 20, text: '20条/页'},
							{value: 50, text: '50条/页'}
						],
						isShowRefresh: true,
						totalPage: Math.ceil(self.totalSize/self.pagesize),
						callBack: function (currPage, pageSize) {
							self.page=currPage;
							self.pagesize=pageSize;
							//分页改变加载数据
							self.getData()
						}
					});
					cb&&cb();
					$('table th input:checkbox').on('click' , function(){
						var that = this;
						$(this).closest('table').find('tr > td:first-child input:checkbox')
						.each(function(){
							this.checked = that.checked;
							$(this).closest('tr').toggleClass('selected');
						});
							
					});
					$('[data-rel="tooltip"]').tooltip({placement: function(context, source) {
						var $source = $(source);
						var $parent = $source.closest('table')
						var off1 = $parent.offset();
						var w1 = $parent.width();
				
						var off2 = $source.offset();
						var w2 = $source.width();
				
						if( parseInt(off2.left) < parseInt(off1.left) + parseInt(w1 / 2) ) return 'right';
						return 'left';
					}});
				}
				//初始化
				new List().init()
			})(jQuery)
		</script>
	
</body>
</html>

